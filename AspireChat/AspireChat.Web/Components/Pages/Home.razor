@page "/"

<PageTitle>Home</PageTitle>

<MudPaper Class="pa-6" Elevation="0">
    <MudStack Spacing="2">
        <MudText Typo="Typo.h3" GutterBottom="true" Color="Color.Primary">
            Aspire Chat Demo
        </MudText>

        <MudText Typo="Typo.body1">
            Welcome to the Aspire Chat Demo app! This application demonstrates real-time chat functionality built with <b>Blazor</b> and powered by <b>.NET Aspire</b>.
        </MudText>

        <MudAlert Severity="Severity.Info" Variant="Variant.Filled" Dense="true">
            This project is part of my <b>blog series</b> on building modern distributed applications using <b>Aspire</b> and <b>Blazor</b>.
        </MudAlert>

        <MudText Typo="Typo.body2">
            Explore the code, try out the chat features, and check out the accompanying blog posts for a deep dive into the architecture and implementation details.
        </MudText>

        <AuthorizeView>
            <NotAuthorized>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/login" StartIcon="@Icons.Material.Filled.Login">
                    Login to get started
                </MudButton>
            </NotAuthorized>
        </AuthorizeView>
    </MudStack>
</MudPaper>
